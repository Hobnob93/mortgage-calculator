<MudCard Style="@CardStyling" Class="@CardClasses">
    <MudCardHeader Class="@CardHeaderClasses">
        <CardHeaderContent>
            <MudText Typo="Typo.h4">@Title</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="@CardContentClasses">
        <MudPaper Elevation="0">
            @if (ChildContent is null || IsLoading)
            {
                <MudProgressCircular Color="Color.Info" Indeterminate="true" />
            }
            else
            {
                @ChildContent
            }
        </MudPaper>
    </MudCardContent>
</MudCard>
