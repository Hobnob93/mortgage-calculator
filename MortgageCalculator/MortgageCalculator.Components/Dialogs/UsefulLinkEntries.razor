@using MortgageCalculator.Core.Documents;

<MudDialog>
    <DialogContent>
        <MudContainer Style="max-height: 60vh; overflow-y: scroll">
            <MudTable T="UsefulLink" Items="@UsefulLinks" Hover="true" Breakpoint="Breakpoint.Sm" OnRowClick="RowClickEvent" Elevation="0" Dense>
                <ColGroup>
                    <col style="width:40%"/>
                    <col style="width:30%" />
                    <col style="width:10%" />
                    <col style="width:20%" />
                </ColGroup>
                <HeaderContent>
                    <MudTh>Name</MudTh>
                    <MudTh>Icon Name</MudTh>
                    <MudTh>Icon</MudTh>
                    <MudTh Class="me-8" Style="text-align:right;padding-right:30px;">Link</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Name">@context.Name</MudTd>
                    <MudTd DataLabel="Icon Name">@context.IconName</MudTd>
                    <MudTd DataLabel="Icon">
                        <MudIcon Icon="@context.Icon"></MudIcon>
                    </MudTd>
                    <MudTd DataLabel="Link" Style="text-align:right">
                        <MudButton Variant="Variant.Text" Href="@context.Href" Target="_blank" EndIcon="@Icons.Material.Filled.ChevronRight" IconColor="Color.Primary">Open Link</MudButton>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudContainer>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="CreateNewLink" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Success">Create New</MudButton>
        <MudButton OnClick="() => Dialog.Cancel()" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>
