@using Microsoft.AspNetCore.Components.Forms

<MudDialog>
    <DialogContent>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator/>
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudTextField Label="Link Name" HelperText="Displayed in the links menu" Variant="Variant.Outlined"
                        @bind-Value="_model.Name" For="@(() => _model.Name)"/>
                    <MudTextField Label="Link" Class="mt-3" HelperText="Type/paste in the URL" Variant="Variant.Outlined"
                        @bind-Value="_model.Href" For="@(() => _model.Href)"/>
                    <MudField Label="Link Icon" HelperText="Shows next to the link in the menu - click the icon image to change" Variant="Variant.Outlined"
                        Adornment="Adornment.End" AdornmentColor="Color.Info" AdornmentIcon="@_model.Icon" OnAdornmentClick="OnChangeIconClicked">@_model.IconName</MudField>
                </MudCardContent>

                <MudCardActions>
                    <MudButton OnClick="DeleteClicked" Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever">Delete</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Color="Color.Success" Class="ml-auto">Save</MudButton>
                    <MudButton OnClick="() => Dialog.Cancel()" Color="Color.Info">Cancel</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>