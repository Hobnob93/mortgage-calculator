@inherits ApiComponentBase

<MudGrid>
    <MudItem xs="12" sm="12" md="6" lg="4">
        <DashboardContainer VerticalHeight="VerticalHeight._35" Title="Remaining Loan"></DashboardContainer>
    </MudItem>

    <MudItem xs="12" sm="12" md="6" lg="4">
        <DashboardContainer VerticalHeight="VerticalHeight._35" Title="House Value" IsLoading="houseValue is null">
            @if (houseValue is not null)
            {
                <MudGrid>
                    <DashboardNumber ItemSize="12" ColorCode="ColorCode.Neutral" LeadingText="£" ValueAsString="@houseValue.PurchaseValue.ToString("n0")" Caption="Purchased For"/>
                    <DashboardNumber ItemSize="12" ColorCode="ColorCode.Neutral" LeadingText="£" ValueAsString="@houseValue.EstimatedValue.ToString("n0")" Caption="Estimated Value"/>
                    <DashboardNumber ItemSize="6" ColorCode="ColorCode.Neutral" LeadingText="£" ValueAsString="@houseValue.Equity.ToString("n0")" Caption="Estimated Equity" />
                    <DashboardNumber ItemSize="6" TrailingText="%" ValueAsString="@houseValue.PercentageDifference.ToString("0.00")" Caption="House Price Change"
                        ColorCode="@(houseValue.PercentageDifference >= 0 ? ColorCode.Good : ColorCode.Bad)" />
                </MudGrid>
            }
        </DashboardContainer>
    </MudItem>

    <MudItem xs="12" sm="12" md="6" lg="4">
        <DashboardContainer VerticalHeight="VerticalHeight._35" Title="Loan To Value"></DashboardContainer>
    </MudItem>

    <MudItem xs="12" sm="12" md="6">
        <DashboardContainer VerticalHeight="VerticalHeight._50" Title="Loan Over Time"></DashboardContainer>
    </MudItem>

    <MudItem xs="12" sm="12" md="6">
        <DashboardContainer VerticalHeight="VerticalHeight._50" Title="LTV Over Time"></DashboardContainer>
    </MudItem>
</MudGrid>
